<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".SecondActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:fontFamily="sans-serif-medium">
        <ImageButton
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="5dp"
            android:onClick="backActivity"
            android:background="@drawable/img_8" />


        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            tools:srcCompat="@drawable/img" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="420dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/blue_dark"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:text="Pizza" />

            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:text="Description"/>

            <LinearLayout
                android:id="@+id/ui_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="16dp">

                <ToggleButton
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:textOn="Маленькая"
                    android:textOff="Маленькая"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"
                    android:background="@color/blue_dark"/>

                <ToggleButton
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:textOn="Средняя"
                    android:textOff="Средняя"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"
                    android:background="@color/blue_dark"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"/>

                <ToggleButton
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:textOn="Большая"
                    android:textOff="Большая"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"
                    android:background="@color/blue_dark"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/ui_button"
                android:gravity="center"
                android:padding="16dp">

                <ToggleButton
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:textOn="Традиционное"
                    android:textOff="Традиционное"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"
                    android:background="@color/blue_dark"/>

                <ToggleButton
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:textOn="Тонкое"
                    android:textOff="Тонкое"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"
                    android:background="@color/blue_dark"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"/>

            </LinearLayout>


            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/orange"
                android:textSize="20sp"
                android:text="от 2400 тг"
                android:textStyle="bold" />

        </LinearLayout>





    </LinearLayout>





</LinearLayout>